
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
<p>Please fill out the following form to register:</p>

<form class="form-horizontal" action="/Home/AddUser" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" id="FirstName">First Name:</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="FirstName" name="FirstName" pattern="^[A-Z][a-z]{1,30}$" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" id="LastName">Last Name:</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="LastName" name="LastName" pattern="^[A-Z][a-z]{1,30}$" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" id="Email">Email: </label>
        <div class="col-sm-7">
            <input type="email" class="form-control" id="Email" name="Email" pattern="^\w+&#64;[a-zA-Z_]+?\.[a-zA-Z]{2,3}$" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" id="Phone">Phone Number:</label>
        <div class="col-sm-7">
            <input type="tel" class="form-control" id="Phone" name="Phone" pattern="^[\d]{3}-[\d]{3}-[\d]{4}$" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" id="Password">Password:</label>
        <div class="col-sm-7">
            <input type="password" class="form-control" id="Pwd" name='Password' pattern="^.{3,20}$" required />
        </div>
    </div>
    <input type="submit" value="Register">
</form>

   